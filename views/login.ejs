<body class="text-center">

    <form class="form-signup" action="/login" method="post">
        <img class="mb-4" src="/images/news_image.png" alt="" width="80" height="80">
        <h1 class="h3 mb-3 fw-normal"><strong>Log in</strong></h1>

        <input type="email" class="form-control top" name="username" placeholder="Email Address" required>
        <input type="password" class="form-control bottom" name="password" placeholder="Password" required>

        <% if(warningMsg===true){ %>
            <p style="color: red;">Enter correct username and password</p>
            <% } %>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Log In</button>

                <p>Don't have a account? <a href="/signup">Register</a></p>

                <p>- OR -</p>
                <p><strong>Login with</strong></p>
                <ul class="social mb-0 list-inline mt-3">
                    <li class="list-inline-item"><a href="/auth/google" class="social-link"><i class="fab fa-google fa-2x"></i></a>
                    </li>
                    <li class="list-inline-item"><a href="/auth/facebook" class="social-link"><i class="fab fa-facebook-f fa-2x"></i></a>
                    </li>
                    <li class="list-inline-item"><a href="/auth/twitter" class="social-link"><i class="fab fa-twitter fa-2x"></i></a></li>
                </ul>

                <p class="mt-5 mb-3 text-muted">&copy; The Pal tech</p>
    </form>



